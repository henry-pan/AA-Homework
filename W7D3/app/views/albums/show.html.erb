<h1><%= @album.title %></h1>

<a href="<%= edit_album_url(@album.id) %>">Edit Album</a>

<form action="<%= album_url(@album.id) %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" value="Delete Album">
</form>

<h2>Album Details</h2>
<ul>
  <li>Title: <%= @album.title %></li>
  <li>Year: <%= @album.year %></li>
  <li>Type: <%= @album.live ? "Live" : "Studio" %></li>
</ul>